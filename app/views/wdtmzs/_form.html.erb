<%= form_with(model: wdtmz, local: true) do |form| %>
  <% if wdtmz.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <%= wdtmz.errors.full_messages.first %>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, 'Title' %>
    <%= form.text_field :title, class: 'form-control', autofocus: true, placeholder: 'Mr./Mrs./Ms./Dr.', :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :name, 'Full Name' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'First Middle Surname', :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :email, 'Email' %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'example@email.com', :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :number, 'WhatsApp Number' %>
    <%= form.text_field :number, class: 'form-control', placeholder: '10-digit Number', :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :profession, 'Profession' %>
    <%= form.text_field :profession, class: 'form-control', placeholder: 'Student/Teacher/Other', :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :college, 'College/Company' %>
    <%= form.text_field :college, class: 'form-control', placeholder: 'College/Company Name', :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :branch, 'Branch (Only for students/faculties)' %>
    <%= form.text_field :branch, class: 'form-control', placeholder: 'Elex/CS/IT/Mech/Other' %>
  </div>

  <div class="field">
    <%= form.label :suggestions, 'Suggestions?' %>
    <%= form.text_field :suggestions, class: 'form-control', placeholder: 'Suggestions' %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit Form',class: 'btn btn-success' %>
  </div>
<% end %>
